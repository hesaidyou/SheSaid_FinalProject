<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/colourful9"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SAY"
        android:gravity="center"
        android:textSize="20dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/isay_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="说点什么吧.."
                android:text=""
                android:textSize="16dp" />
            <ImageView
                android:id="@+id/img_picture"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="bottom"
                 />
            <TextView
                android:id="@+id/text_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/filter_one"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="灰度"/>
                <Button
                    android:id="@+id/filter_two"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="乌墨"/>
                <Button
                    android:id="@+id/filter_three"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="反转"/>
                <Button
                    android:id="@+id/filter_four"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="素描" />
                <Button
                    android:id="@+id/filter_five"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="像素" />
                <Button
                    android:id="@+id/filter_six"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="旋转" />
                <Button
                    android:id="@+id/filter_yes"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="YES"/>
            </LinearLayout>



        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/isay_takephoto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="拍摄"/>
        <Button
            android:id="@+id/isay_album"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="相册"/>
        <Button
            android:id="@+id/isay_location"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="位置"/>

        <Button
            android:id="@+id/isay_send"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="发送" />

    </LinearLayout>

</LinearLayout>